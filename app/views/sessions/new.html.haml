.ui.massive.segment
	.ui.inverted.fixed.large.menu
		.ui.container
			= link_to 'Switter', root_path, class: "ui orange header inverted item"
.ui.middle.aligned.doubling.center.aligned.grid
	.six.wide.column
		- if !@login_error.nil?
			.ui.error.message
				= @login_error[:message]
		= form_for :login, url: login_path, html: {class: "ui large form segment", id: "login"} do |l|
			.field
				= l.text_field :username, placeholder: "Username"
			.field
				= l.password_field :password, placeholder: "Password"
			= l.submit 'Login', class: "ui primary large button"
			%div
				Want to join?
				= link_to 'Signup', signup_path